{
    "presets": [
        "@babel/preset-env", 
        "@babel/preset-react",
        "@babel/preset-typescript"
    ],
    "plugins": [
        ["@babel/plugin-proposal-decorators", { "legacy": true}],
        ["module-resolver", {
            "root": ["./dist"],
            "alias": {
                "@": "./src",
                "@main": "./src/react-apps/apps/main",
                "@pages": "./src/react-apps/pages",
                "@assets": "./src/public/assets"
            }
        }]
    ]
}